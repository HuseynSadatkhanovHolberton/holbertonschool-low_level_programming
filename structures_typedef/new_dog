#include <stdlib.h>
#include "dog.h"

/**
 * new_dog - creates a new dog
 * @name: name of the dog
 * @age: age of the dog
 * @owner: owner of the dog
 *
 * Return: pointer to new dog, or NULL if it fails
 */
dog_t *new_dog(char *name, float age, char *owner)
{
	dog_t *d;
	char *name_copy;
	char *owner_copy;
	int i;

	/* Allocate memory for struct */
	d = malloc(sizeof(dog_t));
	if (d == 0)
		return (0);

	/* Allocate memory for name */
	for (i = 0; name[i]; i++)
		;
	name_copy = malloc(i + 1);
	if (name_copy == 0)
	{
		free(d);
		return (0);
	}
	/* Copy name manually */
	for (i = 0; name[i]; i++)
		name_copy[i] = name[i];
	name_copy[i] = '\0';

	/* Allocate memory for owner */
	for (i = 0; owner[i]; i++)
		;
	owner_copy = malloc(i + 1);
	if (owner_copy == 0)
	{
		free(name_copy);
		free(d);
		return (0);
	}
	/* Copy owner manually */
	for (i = 0; owner[i]; i++)
		owner_copy[i] = owner[i];
	owner_copy[i] = '\0';

	/* Assign values */
	d->name = name_copy;
	d->age = age;
	d->owner = owner_copy;

	return (d);
}

